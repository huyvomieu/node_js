<form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <h2 class="mt-4">Sửa Bài Hát</h2>
    <div class="form-group ">
        <label for="name">Tên Bài Hát</label>
        <input type="text" class="form-control" id="name" , name="name" value="{{course.name}}">
    </div>
    <div class="form-group">
        <label for="description">Mô tả Bài hát</label>
        <textarea type="text" class="form-control" id="description" ,
            name="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">VideoId</label>
        <input type="text" class="form-control" id="videoId" , name="videoId" value="{{course.videoId}}">
    </div>
    <div class=" form-group">
        <label for="exampleFormControlInput1">Ca sĩ thể hiện</label>
        <input type="text" class="form-control" id="author" , name="author" value="{{course.author}}">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Loại nhạc</label>
        <select class="form-control" id="level" name="level">
            <option>Nhạc nghe được</option>
            <option>Nhạc Hay</option>
            <option>Nhạc nghe cái nghiện luôn</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>