<form method="post" action="/courses/store">
    <h2 class="mt-4">Thêm Bài Hát</h2>
    <div class="form-group ">
        <label for="name">Tên Bài Hát</label>
        <input type="text" class="form-control" id="name" , name="name">
    </div>
    <div class="form-group">
        <label for="description">Mô tả Bài hát</label>
        <input type="text" class="form-control" id="description" , name="description">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">VideoId</label>
        <input type="text" class="form-control" id="videoId" , name="videoId">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Ca sĩ thể hiện</label>
        <input type="text" class="form-control" id="author" , name="author">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Loại nhạc</label>
        <select class="form-control" id="level" name="level">
            <option>Nhạc nghe được</option>
            <option>Nhạc Hay</option>
            <option>Nhạc nghe cái nghiện luôn</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Thêm Bài Hát</button>
</form>